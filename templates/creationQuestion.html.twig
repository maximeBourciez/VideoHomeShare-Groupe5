{% extends 'base_template.html.twig' %}

{% block title %}
    VHS | Quizz
{% endblock %}

{% block content %}
<main class="container flex-fill mb-2">
    <br>
    <h1>Création des questions</h1>
    <br>

    {% if messageErreur %}
        <div class="alert alert-danger" role="alert">
            {{ messageErreur }}
        </div>
    {% endif %}

    <form action="index.php?controller=quizz&methode=ajouterQuestion" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="idQuizz" value="{{ idQuizz }}">
        <input type="hidden" name="numQuestion" value="{{ numQuestion }}">
        <input type="hidden" name="nbQuestions" value="{{ nbQuestions }}">

        <h3>Question n°{{ numQuestion }}</h3>
        <div class="card bg-mydark mx-auto my-auto p-4 text-white rounded">

            <!-- Champ Image -->
            <div class="row mb-4 d-flex justify-content-center align-items-center" style="margin: 1px;">
                <label for="image_{{ numQuestion }}" class="col-form-label">Ajouter une image</label>
                <input type="file" 
                       class="form-control" 
                       id="image_{{ numQuestion }}" 
                       name="image_{{ numQuestion }}" 
                       accept="image/*">
                <span id="erreurImage" class="alert alert-danger bg-tercary mx-5 text-white d-none mt-2 d-block fs-5"></span>
            </div>


            <!-- Champ Titre -->
            <div class="row mb-4 d-flex justify-content-center align-items-center" style="margin: 1px;">
                <label for="titre_{{ numQuestion }}" class="col-form-label" id="intitule">Entrez la question</label>
                <textarea name="titre_{{ numQuestion }}" id="titreQuestion" class="rounded col-md-11" placeholder="Saisir la question..." required></textarea>
                <small id="containerNbDecomptesVal"></small>
                <span id="erreurTitre" class="alert alert-danger bg-tercary mx-5 text-white d-none mt-2 d-block fs-5"></span>
            </div>

    
            <!-- Champ des réponses -->
            <div id="reponsesContainer" class="row row-3 mt-5 d-flex justify-content-around">
                {% for i in 0..3 %}
                    <div class="col-md-5 mb-3 d-flex flex-column">
                        <label for="reponse_{{ numQuestion }}_{{ i }}">Réponse {{ i + 1 }}</label>
                        <input type="text" name="reponse_{{ numQuestion }}_{{ i }}" id="reponse_{{ numQuestion }}_{{ i }}" 
                            class="rounded inputReponse w-100" 
                            placeholder="Saisir la réponse..." required/>
                        <small id="containerNbDecomptesRep"></small>    
                        <div class="d-flex align-items-center mt-2">
                            <input type="checkbox" name="correcte_{{ numQuestion }}_{{ i }}" id="correcte_{{ numQuestion }}_{{ i }}" class="rounded checkCorrect"/>
                            <label for="correcte_{{ numQuestion }}_{{ i }}" class="ms-2">Correcte</label>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <span id="erreurReponses" class="text-danger d-none mt-2 d-block fs-5"></span>

            <!-- Boutons de manipulation de la page -->
            <div class="d-flex justify-content-center mt-4 gap-4 row row-3">
                <button type="submit" name="methode" value="listeQuizz" class="btn btn-primary fw-bold col-md-5 me-4">Annuler</button>
                <button type="submit" name="methode" value="traiterInfosQuestion" class="btn btn-primary fw-bold col-md-5 ms-2" id="validerReponses">Suivant</button>
            </div>

        </div>
    </form>
</main>

<style>
    .inputReponse {
        height: 50px;
    }
</style>

<script src="js/quizz.js"></script>

{% endblock %}
