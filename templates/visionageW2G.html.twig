									<option value="Contenu trompeur ou spam">Contenu trompeur ou spam</option>
									<option value="Violations de propriété intellectuelle">Violations de propriété intellectuelle</option>
									<option value="Danger pour les enfants">Danger pour les enfants</option>
									<option value="Autre raison">Autre raison</option>
								</select>
								<input type="button" id="envoyerSignalement" class="btn btn-primary mx-auto" value="Signaler">
