{% extends 'base_template.html.twig' %}


{% block content %}
    
<main class="content row flex-grow-1">
    <form action="index.php?controller=utilisateur&methode=checkInfoConnecter" method="POST" class="text-center col-12 col-md-6 col-lg-4 mx-auto my-auto p-4 text-white rounded">
        
        <img src="{{ constant('WEBSITE_LOGO') }}" height="95" width="155" alt="VHS Logo" class="mx-auto my-2">
        <div class="bg-mydark text-white rounded p-4 mb-5">
            <h3 class="mb-3 fw-bold">Connexion</h3>
            
            

            <!-- Champ Email -->
            <div class="form-group mb-3">
                <label for="email" class="d-block text-start mb-0 fw-light">Mail</label> <!-- Align label à gauche -->
                <input type="email" name="mail" id="email" class="form-control" minlength="6" maxlength="320" pattern="[^@\s]+@[^@\s]+\.[^@\s]+" title="adresse mail non valide " required>
            </div>

            <!-- Champ Mot de Passe -->
            <div class="form-group mb-4">
                <label for="password" class="d-block text-start mb-0">Mot de passe</label> <!-- Align label à gauche -->
                <input type="password" name="pwd" id="password" class="form-control" required>
                <a href="index.php?controller=utilisateur&methode=afficherpageMDPOublier" class="text-decoration-underline fw-light text-start text-white">
                    <p>Mot de passe oublié ?</p>
                </a>
            </div>

            <input type="submit" class="btn btn-myprimary my-2 mx-auto" value="Se connecter">
                <a href="index.php?controller=utilisateur&methode=inscription" class="text-white mt-2 fw-light">Créer un compte</a>
        </div>
        
    </form>


    {% if message is defined %}
        <div class="toast show position-fixed bottom-0 end-0 m-3 bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success text-white">
                <strong class="me-auto">Succès</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-white">
                {{ message }}
            </div>
        </div>
    {% endif %}

    {% if messagederreur is defined %}
        <div class="toast show position-fixed bottom-0 end-0 m-3 bg-danger" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-danger text-white">
                <strong class="me-auto">Erreur</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body bg-danger text-white">
                {{ messagederreur }}
            </div>
        </div>
    {% endif %}



</main>


{% endblock %}